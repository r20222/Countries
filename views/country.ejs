<%- include('./partials/head.ejs') %>

<h3>You clicked on <%= query %></h3>

<div class="countries-grid">
    <% country.forEach(country => { %>
        <article class="country">
            <h2><%= country.name.common %></h2>
            <img class="country-flag" src="<%= country.flags.svg %>" alt="<% country.flags.alt %>">
            <p>Continent(s): <%= country.continents %></p>
            <p>Subregion: <%= country.subregion %></p>
            <p>Capital: <%= country.capital %></p>
            <p>Language(s): <%= Object.values(country.languages).join(", ") %></p></p>
        </article>
    <% }); %>
</div>
    
<form action="/search" method="get">
    <fieldset>
        <legend class="another">Search for another country:</legend>
        <label class="another" for="name">Country</label>
        <input id="name" name="name" type="text" required>
        <button type="submit">Search</button>
    </fieldset>
</form>

<%- include('./partials/foot.ejs') %>